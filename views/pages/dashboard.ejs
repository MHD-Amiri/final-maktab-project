<!DOCTYPE html>
<html lang="en">

<%- include('../partials/header.ejs') %>
<title><%= title %></title>

<body>
    <div class="container mt-5">
        <h1>Dashboard</h1>
        <h3>Wellcome to your Dashboard <%= firstName %></h3>
        <table class="table table-hover">
            <thead>
                <tr class="table-primary">
                    <th scope="col">Title</th>
                    <th scope="col">Content</th>
                </tr>
            </thead>
            <tbody>
                <tr class="table-active">
                    <th scope="row">First Name</th>
                    <td><%= firstName %></td>
                </tr>
                <tr class="table-active">
                    <th scope="row">Last Name</th>
                    <td><%= lastName %></td>
                </tr>
                <tr class="table-active">
                    <th scope="row">User Name</th>
                    <td><%= userName %></td>
                </tr>
                <tr class="table-active">
                    <th scope="row">Gender</th>
                    <td><%= gender %></td>
                </tr>
                <tr class="table-active">
                    <th scope="row">Phone Number</th>
                    <td><%= phoneNumber %></td>
                </tr>
                <tr class="table-active">
                    <th scope="row">Bio</th>
                    <td><%= bio %></td>
                </tr>
                <td>
                    <button type="button" class="btn btn-success">Edit</button>
                    <button type="button" class="btn btn-success">Change Password</button>
                    <a href="/users/logout" class="btn btn-danger">Log Out</a>
                </td>
            </tbody>
        </table>
        <form action="/uploadAvatar" method="post" enctype="multipart/form-data">
            <img src="/images/<%= avatar %>" alt="avatar">
            <input type="file" name="avatar" />
            <input type="submit" value="Get me the avatar!" class="btn btn-default">
        </form>
    </div>

    <%- include('../partials/scripts.ejs') %>

</body>

</html>